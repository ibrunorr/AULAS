    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #000000;
            text-align: center; 
            margin-bottom: 20px;
            font-family: 'Arial', sans-serif; 
        }

        form {
            background: rgb(255, 255, 255);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: auto;
        }

        label {
            margin-bottom: 5px;
            color: #000000;
        }

        input[type="text"],
        input[type="email"] {
            width: 100%;
            padding: 4px;
            margin-bottom: 10px;
            border: 1px solid #000000;
            transition: border-color 0.3s;
        }

        input[type="text"]:focus,
        input[type="email"]:focus {
            border-color: #000000;
        }

        input[type="submit"],
        input[type="button"] {
            background-color: #000000;
