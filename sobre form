<body>
    <h1>Iniciando a validação</h1>

    <form id="meuFormulario">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" required aria-label="Nome">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required aria-label="Email">

        <input type="submit" value="Enviar dados">
        <input type="button" value="Limpar Campos" id="limparCampos">
    </form>

    <script>
        const formulario = document.getElementById('meuFormulario');
        const limparCampos = document.getElementById('limparCampos');

        formulario.addEventListener('submit', function(event) {
            event.preventDefault();

            const nome = document.getElementById('nome').value;   
            const email = document.getElementById('email').value;   

            if (nome && email) {
                const mensagem = `Nome: ${nome}\nEmail: ${email}`;
                alert(mensagem);
            } else {
                alert('Por favor, preencha todos os campos.');
            }
        });

        limparCampos.addEventListener('click', function() {
            document.getElementById('nome').value = '';
            document.getElementById('email').value = '';
        });
    </script>
</body>
