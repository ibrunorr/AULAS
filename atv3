#include <stdio.h>

int main() {
float saldo, aumento;
int mes;

printf("Digite seu saldo para investir: ");
scanf("%f", &saldo);

printf("Digite o mes para ver o investimento com juros de 5 porcento ao mes de (1 a 5): ");
scanf("%i", &mes);

 switch (mes){
     case 1: 
     aumento= (saldo * 1.05);
     printf("Seu investimento no 1 mes com 5 porcento e:\n");
     printf("%.2f", aumento);
     break;
     
     case 2: 
     aumento= (saldo * 1.10);
     printf("Seu investimento no 2 mes 5 com porcento de juros simples e:\n");
     printf("%.2f", aumento);
     break;
     
     case 3: 
     aumento= (saldo * 1.15);
     printf("Seu investimento no 3 mes com 5 porcento de juros simple e:\n");
     printf("%.2f", aumento);
     break;
     
      case 4: 
     aumento= (saldo * 1.20);
     printf("Seu investimento no 4 mes com 5 porcento de juros simples e:\n");
     printf("%.2f", aumento);
     break;
     
      case 5: 
     aumento= (saldo * 1.25);
     printf("Seu investimento no 5 mes com 5 porcento de juros simples e:\n");
     printf("%.2f", aumento);
     break;
     
     default: 
     printf("Digite um mes de 1 a 5...");
 }
 
 return 0;

 }
